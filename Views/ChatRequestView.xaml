<Window x:Class="TDDD49.Views.ChatRequestView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TDDD49.Views"
        mc:Ignorable="d"
        Title="ChatRequestView" Height="422.34" Width="628.723">
    <Grid Background="#FF787878">
        <Label Content="{Binding Request.User}" HorizontalAlignment="Left" Margin="27,49,0,0" VerticalAlignment="Top" Height="47" Width="185" FontSize="26"/>
        <Label Content="Wishes to Connect" HorizontalAlignment="Left" Margin="27,0,0,248" VerticalAlignment="Bottom" Height="47" Width="350" FontSize="26"/>
        <Label Content="Shall we accept or refuse?" HorizontalAlignment="Left" Margin="148,0,0,158" Width="320" FontSize="26" Height="47" VerticalAlignment="Bottom"/>
        <Button Content="Accept" Command="{Binding AcceptCommand}" Margin="43,0,0,39" Background="#FFAADCFF" Height="93" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="224"/>
        <Button Content="Refuse" Command="{Binding RefuseCommand}" Margin="0,0,54,39" Background="#FFBB0000" HorizontalAlignment="Right" Width="219" Height="93" VerticalAlignment="Bottom"/>


    </Grid>
</Window>
